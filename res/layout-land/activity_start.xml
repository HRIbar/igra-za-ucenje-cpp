<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@drawable/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <Button
        android:id="@+id/buIzhod"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/buRezultati"
        android:layout_alignParentBottom="true"
        android:background="@drawable/lovingbuttons"
        android:text="Izhod"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buNavodila"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_above="@+id/buRezultati"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lovingbuttons"
        android:text="Navodila za igranje"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buRezultati"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_above="@+id/buIzhod"
        android:layout_alignLeft="@+id/buNavodila"
        android:background="@drawable/lovingbuttons"
        android:text="Rezultati"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buZacni"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_above="@+id/buNavodila"
        android:layout_alignLeft="@+id/buNavodila"
        android:background="@drawable/lovingbuttons"
        android:text="Začni"
        android:textColor="#FFFFFF" />

</RelativeLayout>